@{
    ViewBag.Title = "报名通道";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section MySection{
    <link href="~/Content/Css/Match/apply.css" rel="stylesheet" />
}
@section MySection1{
    <script src="~/Content/Script/Match/apply.js"></script>
}
<div class="ck-head">
    <img src="../../Files/Img/Layout/bananer-3.jpg" alt="首图">
</div>

<div class="container ck-background">
    <div class="ck-applyimg">
        <img src="../../Files/Img/Match/match-1.png" alt="报名通道首页">
    </div>
    <div class="ck-apply">
        <p>特别提醒：根据要求认真填写报名表，每支队伍填写一张报名表</p>
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">地区</label>
                <select class="form-control">
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">学段</label>
                <select class="form-control">
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">学校</label>
                <select class="form-control">
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                </select>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">比赛项目</label>
                <select class="form-control">
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                    <option>市直属</option>
                </select>
            </div>
            <div class="form-group ck-student">
                <label class="ck-lable" for="">学生姓名</label>
                <input type="text" class="form-control ck-studentinput" placeholder="学生姓名">
                <input type="text" class="form-control ck-studentinput" placeholder="学生姓名">
                <a href="javascript:void(0);" onclick="plusstudent()">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
                <a href="javascript:void(0);" onclick="minusstudent()">
                    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                </a>
            </div>
            <div class="form-group">
                <label class="ck-lable" for="">指导老师</label>
                <input type="text" class="form-control ck-studentinput" placeholder="指导老师">
                <input type="text" class="form-control ck-studentinput" placeholder="指导老师">
                <a href="javascript:void(0);" onclick="plusteacher()">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </a>
                <a href="javascript:void(0);" onclick="minusteacher()">
                    <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                </a>
            </div>
            <div class="form-group">
                <label class="ck-lable" for="">教师电话</label>
                <input type="text" class="form-control" id="teachernumber" placeholder="教师电话">
            </div>
            <div class="ck-submit">
                <button type="submit" class="btn btn-defaul">报名</button>
            </div>
        </form>
    </div>
</div>

