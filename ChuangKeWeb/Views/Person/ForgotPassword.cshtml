@{
    ViewBag.Title = "忘记密码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section MySection{
    <link href="~/Content/Css/Person/forgotpassword.css" rel="stylesheet" />
}
@section MySection1{

    <script src="~/Content/Script/Person/forgotpassword.js"></script>
}
<div class="container ck-background">
    <ul class="person-top">
        <li class="col-md-4">
            <div>
                <div class="first-png"></div>
                <p>验证邮箱</p>
            </div>
        </li>
        <li class="col-md-4">
            <div>
                <div class="second-png"></div>
                <p>输入验证码</p>
            </div>
        </li>
        <li class="col-md-4">
            <div>
                <div class="third-png"></div>
                <p>设置新密码</p>
            </div>
        </li>
        <div class="clearfloat"></div>
    </ul>
    <div class="ck-content">
        <ul class="ck-input">
            <li class="col-md-12">
                <div class="ck-form">
                    <span class="label label-default">邮箱:</span>
                    <input type="email" id="forgot-email" class="form-control" required="required">
                    <button type="submit" class="btn btn-primary" onclick="checkemail()">确定</button>
                </div>
            </li>
            <li class="col-md-12">
                <div class="ck-form">
                    <span class="label label-default">验证码:</span>
                    <input type="email" id="forgot-vcode" class="form-control" required="required">
                    <button type="submit" class="btn btn-primary" onclick="checkvcode()">确定</button>
                </div>
            </li>
            <li class="col-md-12">
                <div class="ck-form">
                    <span class="label label-default">重置密码:</span>
                    <input type="password" id="forgot-password" class="form-control" required="required">
                    <input type="password" id="forgot-checkpassword" class="form-control" required="required">
                    <button type="submit" class="btn btn-primary" onclick="checkpassword()">确定</button>
                </div>
            </li>
            <div class="clearfloat"></div>
        </ul>
    </div>
</div>

<div class="modal fade" id="modal-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content ck-modal">
            <div class="ck-fail ck-png">
            </div>
            <div>
                <p>请输入正确的邮箱</p>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-2">
    <div class="modal-dialog modal-sm">
        <div class="modal-content ck-modal">
            <div class="ck-fail ck-png">

            </div>
            <div>
                <p>请输入正确的验证码</p>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-3">
    <div class="modal-dialog modal-sm">
        <div class="modal-content ck-modal">
            <div class="ck-fail ck-png">

            </div>
            <div>
                <p>2次密码不一致</p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-4">
    <div class="modal-dialog modal-sm">
        <div class="modal-content ck-modal">
            <div class="ck-success ck-png">

            </div>
            <div>
                <p>恭喜你！找回密码成功！</p>
            </div>
        </div>
    </div>
</div>